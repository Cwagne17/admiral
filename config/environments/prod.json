{
    "name": "prod",
    "type": "advanced-cloud",
    "account": "333333333333",
    "region": "us-east-1",
    "network": {
        "pattern": "vpc-endpoints",
        "azCount": 3,
        "enableFlowLogs": true,
        "vpcCidr": "10.2.0.0/16"
    },
    "compute": {
        "pattern": "mixed",
        "nodeGroups": [
            {
                "name": "general",
                "instanceTypes": [
                    "m5.large",
                    "m5.xlarge"
                ],
                "capacityType": "ON_DEMAND",
                "desired": 4,
                "min": 3,
                "max": 10,
                "labels": {
                    "role": "general"
                }
            },
            {
                "name": "monitoring",
                "instanceTypes": [
                    "m5.xlarge"
                ],
                "capacityType": "ON_DEMAND",
                "desired": 2,
                "min": 2,
                "max": 4,
                "labels": {
                    "role": "monitoring"
                },
                "taints": [
                    {
                        "key": "monitoring",
                        "value": "true",
                        "effect": "NO_SCHEDULE"
                    }
                ]
            }
        ],
        "fargateProfiles": [
            {
                "name": "system",
                "selectors": [
                    {
                        "namespace": "kube-system"
                    },
                    {
                        "namespace": "aws-load-balancer-controller"
                    },
                    {
                        "namespace": "cert-manager"
                    }
                ]
            }
        ]
    },
    "addons": {
        "gitops": "argocd",
        "mesh": "linkerd",
        "albController": true,
        "certManager": true,
        "observability": true,
        "ebs": true,
        "efs": true
    },
    "costControls": {
        "autoShutdown": false,
        "ttlHours": 0,
        "budgetAlerts": true,
        "tags": {
            "Environment": "prod",
            "CostCenter": "homelab",
            "Owner": "platform-team"
        }
    },
    "eksVersion": "1.30"
}